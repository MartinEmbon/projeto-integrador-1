<%- include("./partials/header")%>
<%- include("./partials/nav")%>

    <!--comeco pagina cursos-->
    <div class="container-site">

        <div class="caco"></div>


        <section class="encabezado">
            <i class="fas fa-book"></i>
            <h2 class="main-header">CADASTRO DE PROFESSORES</h2>            
        </section>
        <!--encabezado-->

        <section>
            <a href="/database/dashboard/professornovo" class="btn btn-primary">Novo Professor</a>      
            <a href="/database/dashboard" class="btn btn-primary">Voltar a Dashboard</a>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Sobrenome</th>                       
                        <th>Email</th>
                        <th>Senha</th>
                        <th>Cargo</th>
                        <th>Valor Hora</th>                
                        <th>Editar</th>                
                        <th>Deletar</th>                
                    </tr>
                </thead>
                <tbody>                    
                        <% professores.forEach(professor => { %>
                        <tr>
                            <td><%= professor.id %> </td>
                            <td><%= professor.nome %> </td>
                            <td><%= professor.sobrenome %> </td>
                            <td><%= professor.email %> </td>
                            <td><%= professor.password %> </td>
                            <td><%= professor.puesto %> </td>
                            <td><%= professor.valor_hora %> </td>  
                            <td>
                                <a href="/database/dashboard/professor/editar/<%= professor.id %>" class="btn btn-gray btn-editar"><i class="fas fa-edit pen-edit"></i></a>
                            </td>
                            <td>
                                <form class="form-cadastro1" name="<%= professor.nome %><%= professor.id %>" action="/database/dashboard/professor/excluir/<%= professor.id %>?_method=DELETE" method="POST" enctype="multipart/form-data">
                                    <button type="submit" class="btn-dashboard">
                                        <span><i class="fas fa-times"></i></span>
                                    </button>
                                </form>
                            </td>                          
                        </tr>
                        <% }) %>                    
                </tbody>
            </table>            
        </section>    

<%- include("./partials/footer")%>